<div class="wrapper">
  <div class="w100 mtop40 bdr-bot">
    <div class="left-content flt">
      <h1>Listing messages</h1>

      <table border="1" width="100%" cellpadding="0" cellspacing="0">
        <tr class="purchase">
          <th>Subject</th>
          <th>Body</th>
          <th>From user</th>
          <th>To user</th>
          <th>Read</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @messages.each_with_index do |message, index| %>
            <tr class="<%= index%2==0 ? "even" :"odd" %>">
              <td><%= message.subject %></td>
              <td><%= message.body %></td>
              <td><%= message.from_user %></td>
              <td><%= message.to_user %></td>
              <td><%= message.read %></td>
              <td><%= link_to 'Show', message %></td>
              <td><%= link_to 'Edit', edit_message_path(message) %></td>
              <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
        <% end %>
      </table>

      <br/>

    </div>
    <div class="right-content frt">
      <%= render :partial => "/shared/right_login_menu" %>
    </div>
  </div>
</div>

