<div class="bodyholder">
  <div class="container">
    <h1>Listing products</h1>

    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Store</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.store_id %></td>
            <% product.images.each do |image| %>
                <td><%= image_tag(image.snap, :width => "200", :height => "150") %></td>
            <% end %>
            <td><%= link_to 'Show', '/admin/products/'+product.id.to_s %></td>
            <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
            <td><%= link_to 'Product_details', '/admin/products/'+product.id.to_s+'/product_details' %></td>
            <td><%= link_to 'Destroy', '/admin/products/destroy/'+product.id.to_s, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
      <% end %>
    </table>

    <br/>

    <%= link_to 'New Product', new_admin_product_path %>
  </div>
</div>