<div class="rightContainer">
  <div class="rightHeading1">
    <div class="rgtHeading1">MANAGE STORES</div>
    <%#*<div class="submitInrBtn1"><%= link_to 'New Product', new_admin_product_path %>
  </div>
  <div class="mngMain mtop20">
    <div class="label">SEARCH MEMBER :</div>
    <div class="inputText"><input type="text" value=""/></div>
    <div class="mediaBtn1">
      <input type="submit" value="Search" class="smallBtn"/>
    </div>
  </div>

  <div class="mngData mtop20">
    <%#*<div class="fMngHeading"><strong>NAME</strong></div>%>
    <div class="sMngHeading"><strong>NAME</strong></div>
    <div class="tMngHeading"><strong>PACKAGE</strong></div>
    <div class="tMngHeading"><strong>PRICE</strong></div>
    <div class="foMngHeading"><strong>ACTION</strong></div>
  </div>

  <div class="mngData">
    <% unless @stores.nil? %>
        <% @stores.each_with_index do |store, index| %>
            <div class="fMngHeading1"><%= link_to store.name, admin_store_path(store) %></div>
            <% unless store.package.blank? %>
                <div class="sMngHeading1"><%= store.package.name %></div>
            <% else %>
                <div class="sMngHeading1">none</div>
            <% end %>
            <% unless store.package.blank? %>
                <div class="tMngHeading1"><%= store.package.price %> </div>
            <% else %>
                <div class="tMngHeading1">none</div>
            <% end %>
            <div class="foMngHeading1">
              <div class="mediaBtn2">
                <%= link_to "Delete", '/admin/stores/destroy/'+store.id.to_s, :confirm => 'Are you sure?', :method => :delete, :class => "smallBtn" %>
              </div>
              <div class="mediaBtn2">
                <%= link_to "Edit", '/admin/stores/'+store.id.to_s+'/edit', :class => "smallBtn" %>
              </div>
            </div>
        <% end %>
    <% end %>

  </div>
</div>


