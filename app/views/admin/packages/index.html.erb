<div class="rightContainer">
  <div class="rightHeading1">
    <div class="rgtHeading1">MANAGE PACKAGES</div>
    <div class="submitInrBtn1"><%= link_to 'New Package', new_admin_package_path %></div>
  </div>

  <div class="mngData mtop20">
    <div class="fMngHeading"><strong>NAME</strong></div>
    <div class="sMngHeading"><strong>Price</strong></div>
    <div class="tMngHeading"><strong>STORE</strong></div>
    <div class="foMngHeading"><strong>ACTION</strong></div>
  </div>

  <div class="mngData">
    <% unless @packages.nil? %>
      <% @packages.each_with_index do |package, index| %>
        <div class="fMngHeading1"><%= link_to package.name, admin_package_path(package) %></div>        
        <div class="sMngHeading1"><%=package.price%></div>                
        <div class="tMngHeading1">none</div>        
        <div class="foMngHeading1">
          <div class="mediaBtn2">
            <%= link_to "Edit", edit_admin_package_path(package), :class => "smallBtn"%>
            <%= link_to "Delete", '/admin/packages/destroy/'+package.id.to_s, :confirm => 'Are you sure?', :method => :delete, :class => "smallBtn" %>
          </div>
        </div>
      <%end%>
    <%end%>

  </div>
</div>


