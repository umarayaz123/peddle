<div class="wrapper">
  <div class="w100 mtop60">
    <div class="logo"><img src="/assets/clogo.png" alt=""/></div>
    <div class="logo-text-holder">
      <%= @store.description%>
    </div>
  </div>
  <div class="w100 mtop60 pbotton20">
    <div class="left-warrpper">
      <div class="w100">
        <div class="nav-top-holder">Our products</div>
        <div class="nav-mid-holder">
          <ul class="left-nav">
            <li class="active latest_products"><a href="#">Latest products</a></li>
            <% @store.products.each do |product| %>
                <li class="products <%= 'active' if params[:id]== product.id.to_s %>"><%= link_to product.name, '#' %></li>
            <% end %>
          </ul>
        </div>
        <div class="nav-bot-holder"></div>
      </div>


      <div class="w100 mtop40">
        <div class="nav-top-holder">Company</div>
        <div class="nav-mid-holder">
          <ul class="left-nav">
            <li><a href="#">About Us</a></li>
            <li><a href="#">Faq</a></li>
            <li><a href="#">Shipping</a></li>
            <li class="bdr-bot-none"><a href="#">Contact Us</a></li>
          </ul>

        </div>
        <div class="nav-bot-holder"></div>
      </div>


    </div>
    <div class="right-warrpper">
      <div class="featured-heading w100">Featured products</div>

      <div class="w100 mtop20 bdr-bot">

        <div class="gellary-main-img w100"><img src="/assets/gellary-main-img.png" alt=""/></div>
        <div class="icon-btn w100">
          <img src="/assets/gray-back-icon.png" alt=""/>
          <img src="/assets/gray-next-icon.png" alt="" class="icon-btn-next"/>
        </div>

      </div>
      <h1 class="mtop20">Latest products</h1>

      <p>Just arrived fresh in our store.</p>

      <div class="w100">
        <% unless @products.blank? %>
            <% @products.each do |product| %>
                <div class="gellary-bg flt mtop20 <%= product.name%>">
                  <div class="gellary-img flt">
                    <% unless product.images.first.blank? %>
                        <%= link_to image_tag(product.images.first.snap, :width => "120", :height => "150"), :controller => "products", :action => "show", :id => product.id %>
                    <% else %>
                        <%= link_to image_tag("../assets/skart.png"), :controller => "stores", :action => "show", :id => product.id %>
                    <% end %>
                  </div>
                  <div class="gellary-left-holder flt"> <%= product.name %> </div>
                  <% lowest_price = -1 %>
                  <% product.product_details.each do |detail|
                      lowest_price = detail.price if detail.price < lowest_price || lowest_price == -1
                  end %>
                  <% unless lowest_price == -1 %>
                      <div class="price-div flt">
                        <span class="doller"> $</span> <%= lowest_price %><span class="doller">0</span>
                      </div>
                  <% else %>
                      <div class="price-div flt">
                        <span class="doller"> $</span> 0.<span class="doller">00</span>
                      </div>
                  <% end %>
                </div>
            <% end %>
        <% end %>
      </div>
      <div class="more-produts w100 mtop20"><img src="/assets/more-produts.png" alt=""/></div>


    </div>
  </div>

</div>

<script>
  $(document).ready(function(){
      $('.products').children().click(function(){
          $('.gellary-bg').hide();
          $('.gellary-bg.'+this.innerHTML).show();
          $('.active').removeClass('active');
          $(this).parent().addClass('active');
      });
      $('.latest_products').children().click(function(){
          $('.gellary-bg').show();
          $('.active').removeClass('active');
          $(this).parent().addClass('active');
      });
  });
</script>