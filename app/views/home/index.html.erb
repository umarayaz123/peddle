  </div>
  <% unless @stores.blank? %>
      <% @stores.each do |store| %>
          <div class="mainentry">
            <div class="ltlogos">
              <img src="../assets/mainentrylogo.png"/>
              <img src="../assets/tagcopy.png"/>
            </div>
            <div class="contentholder">
              <h2>
                <%= store.name %>
              </h2>

              <h3>
                24 minutes ago
              </h3>
              <%= link_to 'View Store', {:controller => "stores", :action => "cart", :id => store.id}, :class => 'viewstorelink' %>

              <div class="miantext">
                <%= store.description %>
                <br/>
                <% unless store.products.nil? %>
                    <% store.products.each do |product| %>
                        <% unless product.images.nil? %>
                            <% product.images.each do |image| %>
                                <%= image_tag(image.snap, :width => "79", :height => "79") %>
                            <% end %>
                        <% end %>
                    <% end %>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
