  <div class="partitionright">

    <h1>
      Sales Floor
    </h1>

    <textarea class="posttext"></textarea>

    <div class="addimage">
      <img src="../assets/addimage.png"/>
      <a href="#">add an image</a>
    </div>

    <div class="share">
      <div class="square">
      </div>
      <img src="../assets/fb.png"/>

      <div class="square">
      </div>
      <img src="../assets/tw.png"/>
      Share
    </div>
    <% unless @stores.blank? %>
        <% @stores.each do |store| %>
            <div class="mainentry">
              <div class="ltlogos">
                <img src="../assets/mainentrylogo.png"/>
                <img src="../assets/tagcopy.png"/>
              </div>
              <div class="contentholder">
                <h2>
                  <%= store.name %>
                </h2>

                <h3>
                  <%= duration(Time.now - store.created_at) %> ago
                </h3>
                <%= link_to 'View Store', root_url(:subdomain =>store.name), :class => 'viewstorelink' %>

                <div class="miantext">
                  <%= store.description %>
                  <br/>
                  <% unless store.products.nil? %>
                      <% store.products.each do |product| %>
                          <% unless product.images.nil? %>
                              <% product.images.each do |image| %>
                                  <%= image_tag(image.snap, :width => "79", :height => "79") %>
                              <% end %>
                          <% end %>
                      <% end %>
                  <% end %>
                </div>
              </div>
            </div>
        <% end %>
    <% end %>
