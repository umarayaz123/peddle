    <div class="tabs-holder flt">
      <div class="tabs-left flt"></div>
      <div class="tabs-mid flt">

        <ul class="tabs flt">
          <li class="home <%= "tab-act" if params[:controller] == "home" && params[:action] == "index" %>">
