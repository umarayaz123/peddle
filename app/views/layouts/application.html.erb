<script type="text/javascript">
    $(document).ready(function() {
        if ($('.notice').html() != "") {
            $.gritter.add({
                // (string | mandatory) the heading of the notification
                title: 'Notice!',
                // (string | mandatory) the text inside the notification
                text: $('.notice').html(),
                time: 5000
            });
        }
        $(".notice").hide();
        $(".alert").hide();
        if ($('.alert').html() != "") {
            $.gritter.add({
                // (string | mandatory) the heading of the notification
                title: 'Notice!',
                // (string | mandatory) the text inside the notification
                text: $('.alert').html(),
                time: 5000
            });
        }
    });
</script>

