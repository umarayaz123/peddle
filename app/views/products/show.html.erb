<div class="body">
  <div class="wrapper">
    <div class="w100 mtop80">
      <div class="logo">
      <% unless @store.image.blank? %>
          <%= link_to image_tag(@store.image.snap, :width => '100px', :height => '100px'),root_url %>
      <% else %>
          <%= link_to image_tag('/assets/clogo.png'), root_url %>
      <% end %>
    </div>
      <div class="logo-text-holder">This is your store description. Lorem ipsum dolor sit amet, consectetur adipiscing
        elit. Donec ullamcorper sem in ipsum commodo accumsan.
      </div>
    </div>
    <div class="w100 mtop60">
      <div class="left-warrpper">
        <div class="w100">
          <div class="nav-top-holder">Our products</div>
          <div class="nav-mid-holder">
            <ul class="left-nav">
              <% @store.products.each do |product| %>
                  <li class="<%= 'active' if params[:id]== product.id.to_s %>"><%= link_to product.name, :controller => "products", :action => "show", :id => product.id %></li>
              <% end %>
            </ul>
          </div>
          <div class="nav-bot-holder"></div>
        </div>


        <div class="w100 mtop40">
          <div class="nav-top-holder">Company</div>
          <div class="nav-mid-holder">
            <ul class="left-nav">
              <li><a href="#">About Us</a></li>
              <li><a href="#">Faq</a></li>
              <li><a href="#">Shipping</a></li>
              <li class="bdr-bot-none"><a href="#">Contact Us</a></li>
            </ul>

          </div>
          <div class="nav-bot-holder"></div>
        </div>


      </div>
      <div class="right-warrpper">
        <h1>You are here:</h1>

        <p>Home > Products > <%= @product.name %></p>

        <div class="w100 mtop20">
          <div class="gellary-holder">
            <%= image_tag(@product.images.first.snap, :width => "300", :height => "400") %>
            <div id="list2">
              <div class="w1">
                <div class="heading-topa falt">
                </div>
                <div class="back-btn-holder frt">
                  <span class="forward"><img src="/assets/next.jpg"></span>
                  <span class="previous"><img src="/assets/prev.jpg"></span>
                </div>
              </div>
              <div class="w100">
                <div class="slider">
                  <ul>
                    <!--<img src="image/1.jpg" alt="" width="150" height="118">-->
                    <%- unless @product.product_details.empty? %>
                        <%- @product.product_details.each do |product_detail| %>
                            <%- unless product_detail.images.blank? %>
                                <li>
                                  <%= image_tag(product_detail.images.first.snap, :width => "100", :height => "100", :id => product_detail.price, :class => "captify") %>
                                </li>
                            <%- end %>
                        <%- end %>
                    <%- end %>
                  </ul>
                </div>
              </div>

            </div>

          </div>

          <div class="gellary-details">
            <h1><%= @product.name %></h1>

            <p>Available in <%= @product.product_details.length %> different colors.</p>

            <div class="price-holder"><span class="sml">$</span><span class="price">
              <% lowest_price = -1 %>
              <% @product.product_details.each do |detail|
                  lowest_price = detail.price if detail.price < lowest_price || lowest_price == -1
              end %>
              <% unless lowest_price == -1 %>
                  <%= lowest_price %>
              <% else %>
                  0
              <% end %>
            </span>
            </div>

            <div class="add-to-cart mtop20"><img src="/assets/add-to-cart.png" alt=""/></div>

            <div class="w100 facebook-like mtop20">
              <img src="/assets/facebook-like.png" alt=""/>
              <label>Be the first of your friends to like this.</label>
            </div>

            <h2 class="mtop60">Product information</h2>

            <p><%= raw(@product.description) %></p>

            <h2 class="mtop40">Details</h2>

            <ul class="details">
              <li><a href="#">BVentilated CLIMACOOL &copy; keeps you dry and comfortable</a></li>
            </ul>


          </div>

        </div>

      </div>
    </div>

  </div>
</div>


<script>

    $(function() {
        $(".slider").jCarouselLite({
            btnNext: ".forward",
            btnPrev: ".previous",
            visible: 2
        });
    });
    $(document).ready(function() {

        $('img.captify').captify({
            // all of these options are... optional
            // speed of the mouseover effect
            speedOver: 'fast',
            // speed of the mouseout effect
            speedOut: 'normal',
            // how long to delay the hiding of the caption after mouseout (ms)
            hideDelay: 500,
            // 'fade', 'slide', 'always-on'
            animation: 'slide',
            // text/html to be placed at the beginning of every caption
            prefix: '',
            // opacity of the caption on mouse over
            opacity: '0.7',
            // the name of the CSS class to apply to the caption box
            className: 'caption-bottom',
            // position of the caption (top or bottom)
            position: 'bottom',
            // caption span % of the image
            spanWidth: 'auto'
        });

//        $(".default .jCarouselLite").jCarouselLite({
//            btnNext: ".default .next",
//            btnPrev: ".default .prev"
//        });
        $('li img').click(function() {
            $('.gellary-holder img:first').attr('src', this.src);
            $('.price').html(this.id);
        });
    });


</script>



